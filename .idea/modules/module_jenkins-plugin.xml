<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jenkins-plugin" default="compile.module.jenkins-plugin">
  <dirname property="module.jenkins-plugin.basedir" file="${ant.file.module_jenkins-plugin}"/>
  
  <property name="module.jdk.home.jenkins-plugin" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jenkins-plugin" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jenkins-plugin" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jenkins-plugin" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="jenkins-plugin.output.dir" value="${module.jenkins-plugin.basedir}/../../out/production/jenkins-plugin"/>
  <property name="jenkins-plugin.testoutput.dir" value="${module.jenkins-plugin.basedir}/../../out/test/jenkins-plugin"/>
  
  <path id="jenkins-plugin.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jenkins-plugin.module.production.classpath">
    <path refid="${module.jdk.classpath.jenkins-plugin}"/>
  </path>
  
  <path id="jenkins-plugin.runtime.production.module.classpath">
    <pathelement location="${jenkins-plugin.output.dir}"/>
  </path>
  
  <path id="jenkins-plugin.module.classpath">
    <path refid="${module.jdk.classpath.jenkins-plugin}"/>
    <pathelement location="${jenkins-plugin.output.dir}"/>
  </path>
  
  <path id="jenkins-plugin.runtime.module.classpath">
    <pathelement location="${jenkins-plugin.testoutput.dir}"/>
    <pathelement location="${jenkins-plugin.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.jenkins-plugin">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jenkins-plugin">
    <patternset refid="excluded.from.module.jenkins-plugin"/>
  </patternset>
  
  
  <target name="compile.module.jenkins-plugin" depends="compile.module.jenkins-plugin.production,compile.module.jenkins-plugin.tests" description="Compile module jenkins-plugin"/>
  
  <target name="compile.module.jenkins-plugin.production" depends="register.custom.compilers" description="Compile module jenkins-plugin; production classes"/>
  
  <target name="compile.module.jenkins-plugin.tests" depends="register.custom.compilers,compile.module.jenkins-plugin.production" description="compile module jenkins-plugin; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jenkins-plugin" description="cleanup module">
    <delete dir="${jenkins-plugin.output.dir}"/>
    <delete dir="${jenkins-plugin.testoutput.dir}"/>
  </target>
</project>